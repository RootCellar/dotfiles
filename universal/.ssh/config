# Disable host key checking for connections to localhost
# I usually use this for ssh'ing into VMs, jumping from the remote host they run on
# I find it to be more convenient and it doesn't sacrifice security
Host localhost
	StrictHostKeyChecking no
	UserKnownHostsFile=/dev/null

# Defaults for all hosts
Host *
	Compression yes
	ExitOnForwardFailure yes
	ServerAliveInterval 20
	ServerAliveCountMax 3
